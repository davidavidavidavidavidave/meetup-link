<div class="container-show-main">
  <div class="col-sm-4">
    <div class="card-meetup-info">
      <div class="card-meetup-info-inner">
        <div class="card-meetup-info-inner-content">
          <h1>This is the meetup</h1>
            <%# <ul> %>
              <p>Name: <%= @meetup.name %></p>
              <p>Event Date: <%= @meetup.event_date %></p>
              <p>Purpose: <%= @meetup.purpose %></p>
              <p>Location: <%= @meetup.location %></p>
              <p>Passcode: <%= @meetup.passcode %> <a href="#" data-controller="copy-passcode" data-passcode="<%= @meetup.passcode %>" data-chatroom-path="<%= meetup_chatroom_path(@meetup) %>">Share</a></p>
              <% @meetup.id %><% @meetup.user_id %></p>
